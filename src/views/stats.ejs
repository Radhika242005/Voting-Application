<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stats Page</title>
    <style>
        /* General Styles */
        body {
            display: flex;
            flex-direction: column;
            background-color: #121212;
            color: #e0e0e0;
            font-family: 'Arial', sans-serif;
            align-items: center;
            padding: 20px;
            margin: 0;
            min-height: 100vh;
        }

        h1 {
            color: #f05454;
            text-align: center;
            font-size: 3rem;
            margin-bottom: 20px;
        }

        hr {
            width: 80%;
            height: 2px;
            background-color: #444;
            border: none;
            margin: 10px 0 30px;
        }

        /* Top Candidate Box */
        #top_candidate {
            width: 90%;
            max-width: 600px;
            border: 2px solid #f05454;
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 30px;
            background-color: #1f1f1f;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }

        #top_candidate h3 {
            font-size: 1.8rem;
            text-align: center;
            margin-bottom: 15px;
            color: #f05454;
        }

        #top_candidate p {
            margin: 10px 0;
            text-align: left;
            font-size: 1.2rem;
        }

        #top_candidate p strong {
            color: #f05454;
        }

        /* Table Styles */
        table {
            border-collapse: collapse;
            width: 90%;
            max-width: 800px;
            background-color: #1f1f1f;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            margin-bottom: 30px;
        }

        th, td {
            border: 1px solid #444;
            padding: 15px;
            text-align: center;
            font-size: 1.1rem;
        }

        th {
            background-color: #333;
            color: #f05454;
            font-size: 1.3rem;
        }

        tr:nth-child(even) {
            background-color: #222;
        }

        tr:hover {
            background-color: #333;
            cursor: pointer;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            h1 {
                font-size: 2.5rem;
            }

            #top_candidate {
                width: 95%;
            }

            table {
                width: 95%;
            }

            th, td {
                font-size: 1rem;
                padding: 10px;
            }

            #top_candidate p {
                font-size: 1rem;
            }
        }
    </style>
</head>
<body>
    <h1>Voting Stats</h1>
    <hr>
    
    <div id="top_candidate">
        <% if (maxVoteCandidate) { %>
            <h3>Top Candidate</h3>
            <p><strong>Name:</strong> <%= maxVoteCandidate.name %></p>
            <p><strong>Party:</strong> <%= maxVoteCandidate.party %></p>
            <p><strong>Votes:</strong> <%= maxVoteCandidate.vote_count %></p>
        <% } %>
    </div>

    <table>
        <thead>
            <tr>
                <th>Candidate</th>
                <th>Party</th>
                <th>Votes</th>
            </tr>
        </thead>
        <tbody>
            <% results.forEach(result => { %>
                <tr>
                    <td><%= result.name %></td>
                    <td><%= result.party %></td>
                    <td><%= result.vote_count %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
